<h2>Question</h2>
<div class="card">
  <div class="card-header">
    <%= "#{@question.paper.semester.course.code} #{@question.paper.semester.formatted} #{@question.paper.name}" %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @question.name %></p>
      <footer class="blockquote-footer">Question <%= @question.number %></footer>
    </blockquote>
  </div>
</div>
<h2>Answers</h2>
<% @answers.each do |answer| %>
  <%= render "shared/answer", answer: answer, current_user: @current_user %>
<% end %>