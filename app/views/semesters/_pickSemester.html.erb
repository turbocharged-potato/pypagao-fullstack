<h2 class="mt-3"><%= @course.code %> Semesters</h2>
<% @course.semesters.each do |semester| %>
	<%= link_to semester.short_formatted, semester_papers_path(semester.id), method: :get, class: 'btn btn-secondary mt-1' %>
<% end %>

<%= link_to "+", "#createSem", class: "btn btn-primary mt-1", "data-toggle" => "modal" %>


</div>

<div class="modal fade" id="createSem" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create a new semester under <%= @course.code %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <%= form_for @semester, url: {action: "create"} do |f| %>
        <div class="modal-body">
          <%= f.label :start_year, "Semester" %>
          <div class="input-group">
            <%= f.number_field :start_year, class: 'form-control', placeholder: '2017', min: 0 %>
            <div class="input-group-prepend input-group-append">
              <span class="input-group-text">/<span>
            </div>
            <%= f.number_field :end_year, class: 'form-control', placeholder: '2018', min: 0 %>
            <div class="input-group-prepend input-group-append">
              <span class="input-group-text">Semester<span>
            </div>
            <%= f.number_field :number,  class: 'form-control', placeholder: '1', min: 1, max: 2 %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Save", class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>